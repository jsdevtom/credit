{
  "name": "ts-lib-boilerplate",
  "version": "0.1.0",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc",
    "test": "jest",
    "lint": "tslint --project ."
  },
  "files": [
    "lib"
  ],
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.spec.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "testRegex": "/src/test/.*\\.(t|j)s$"
  },
  "keywords": [
    "minimal",
    "typescript",
    "boilerplate"
  ],
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MichalZalecki/ts-lib-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/MichalZalecki/ts-lib-boilerplate/issues"
  },
  "homepage": "https://github.com/MichalZalecki/ts-lib-boilerplate#readme",
  "description": "Minimal TypeScript library boilerplate",
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/node": "^12.7.2",
    "@types/sinon": "^7.0.13",
    "jest": "^24.8.0",
    "jsverify": "^0.8.4",
    "sinon": "^7.4.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.2"
  },
  "dependencies": {
    "immutable": "^3.8.2",
    "reflect-metadata": "^0.1.13",
    "transit-immutable-js": "^0.7.0",
    "transit-js": "^0.8.861",
    "uuid": "3.3.2"
  }
}
